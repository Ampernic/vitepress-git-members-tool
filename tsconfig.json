{
  "compilerOptions": {
    "resolveJsonModule": true,
    "types": [
      "vite/client",
      "node",
    ],
    "target": "ESNext",
    "jsx": "preserve",
    "lib": [
      "DOM",
      "ESNext",
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "composite": false,
    "baseUrl": "./src",
    "strict": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "declaration": true,
    "noEmit": false,
    "outDir": "./dist",
    "removeComments": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/components/*.vue",
    "src/**/*.tsx",
    "src/index.mts"
  ],
  "exclude": [
    "**/dist/**",
    "node_modules"
  ]
}
